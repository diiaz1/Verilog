`timescale 1ns/1ns

module XISTO_tb();

reg B_tb, CLK_tb;
reg [1:6] ESTADO_ATUAL;
wire [1:7] LEDS_tb;
reg tempo;
integer i;

XISTO Inst_XISTO (.B(B_tb), .CLK(CLK_tb), .LEDS(LEDS_tb));

//Default - O dado está rolando e os LEDS estão apagados
initial 
	begin
		B_tb = 1; //Dado rolando
		CLK_tb = 1;
		i = 0;
	end

//Colocando o clock:
always
	begin
		#0.5 CLK_tb = ~ CLK_tb;
	end
		
		
//Sorteando o tempo para parar o dado:
initial
	begin
		for (i = 0; i < 10; i = i + 1)
			begin
				tempo = {$random} % 13;
				wait (tempo == $time)
				B_tb = 0;
				$display("Para o tempo %t, os LEDS mostram %b", $time, LEDS_tb);
			end
		$stop;
	end
endmodule
